{
	"name": "hipreme_engine",
	"description": "Open-Source D Game Engine",
	"authors": [
		"Hipreme"
	],
	"copyright": "Copyright Â© 2018 - 2022, Hipreme",
	"license": "CC BY-4.0",
	"buildOptions": [
		"debugMode",
		"debugInfo",
		"debugInfoC",
		"warnings"
	],
	"stringImportPaths": [
		"assets"
	],
	"dflags-ldc": ["--disable-verify"],
	"versions": [
		"HIPREME_DEBUG",
		"HipCheckUnknownKeycode",
		"HipScriptingAPI",
		"GL_45",
		"GL_ARB",
		"AL_EFX"
	],
	"subPackages": [
		"tools/hbuild/"
	],
	"sourcePaths": [
		"source"
	],
	"dependencies": {
		"assets": {"path": "./modules/assets", "version": "*"},
		"audio": {"path": "./modules/audio", "version": "*"},
		"bind": {"path": "./modules/bind", "version": "*"},
		"config": {"path": "./modules/config", "version": "*"},
		"console": {"path": "./modules/console", "version": "*"},
		"error": {"path": "./modules/error", "version": "*"},
		"filesystem": {"path": "./modules/filesystem", "version": "*"},
		"timer": {"path": "./modules/timer", "version": "*"},
		"tween": {"path": "./modules/tween", "version": "*"},
		"hipengine_api:interfaces": {"path": "./api", "version": "*"},
		"math": {"path": "./modules/math", "version": "*"},
		"renderer": {"path": "./modules/renderer", "version": "*"},
		"util": {"path": "./modules/util", "version": "*"}
	},
	"configurations": [
		{
			"name": "desktop",
			"targetPath": "bin/desktop",
			"targetType": "executable",
	
			"lflags-windows-ldc": ["-Lmodules/renderer/lib/win64"],
			"versions": [
				"Desktop",
				"Standalone",
				"Test"
			],
			"versions-windows": [
				"DirectX",
				"XAudio2"
			]
		},
		{
			"name": "4mb",
			"targetPath": "bin/desktop",
			"targetType": "executable",
			"subConfigurations": {
				"renderer": "dxonly",
				"audio": "dxonly",
				"assets": "gamut"
			},
			"dependencies": {
				"d_std": {"path": "modules/d_std", "version": "*"},
				"runtime": {"path": "dependencies/runtime", "version": "*"}
			},
			"lflags-windows": [
				"/SUBSYSTEM:CONSOLE"
			],
			"dflags": [
				"-Oz"
			],
			"versions-windows": [
				"Desktop",
				"Standalone",
				"Test",
				"DirectX",
				"XAudio2"
			]
		},
		{
			"name": "nodx",
			"targetPath": "bin/desktop",
			"targetType": "executable",
			"versions": [
				"Desktop",
				"Standalone",
				"Test"
			],
			"subConfigurations": {
				"audio": "nodx",
				"renderer": "nodx"
			}
		},
		{
			"name": "script",
			"targetPath": "bin/desktop",
			"targetType": "executable",
			"lflags-windows": ["-Lmodules/renderer/lib/win64"],
			"dependencies": {
				"compilewatcher": {"path": "dependencies/compilewatcher"}
			},
			"subConfigurations-linux": {
				"renderer": "nodx"
			},
			"versions": [
				"Desktop",
				"Load_DScript",
				"Standalone"
			],
			"dflags-ldc": ["-link-defaultlib-shared=true"],
			"lflags-linux-ldc": ["--export-dynamic"],
			"versions-windows": [
				"DirectX",
				"XAudio2"
			]
		},
		{
			"name": "wasm",
			"dependencies": {
				"runtime": {"path": "dependencies/runtime", "version": "*"},
				"d_std": {"path": "modules/d_std", "version": "*"}
			},
			"targetType": "staticLibrary",
			"stringImportPaths": [
				"build/wasm/generated"
			],
			"subConfigurations": {
				"d_std": "wasm",
				"console": "wasm",
				"runtime": "wasm",
				"assets": "wasm",
				"audio": "wasm",
				"filesystem": "wasm",
				"renderer": "wasm"
			},
			"versions": [
				"Standalone",
				"HipDStdFile",
				"CarelessAlocation",
				"dll"
			]
		},
		{
			"name": "android",
			"libs": [
				"log",
				"android",
				"OpenSLES",
				"EGL",
				"GLESv3"
			],
			"dependencies": {
				"jni": {"path": "./modules/jni", "version": "*"}
			},
			"subConfigurations": {
				"audio": "android",
				"console": "android",
				"renderer": "android"
			},
			"targetPath": "bin/android/",
			"targetType": "library",
			"versions": [
				"dll",
				"Standalone",
				"OpenSLES1_1"
			]
		},
		{
			"name": "appleos",
			"subConfigurations": { "renderer": "appleos", "audio": "nodx"},
			"versions": ["OpenAL", "Standalone", "AppleOS"],
			"targetType": "staticLibrary"
		},
		{
			"name": "ios",
			"subConfigurations": {"renderer": "appleos", "audio": "ios"},
			"targetType": "staticLibrary",
			"versions": ["Standalone", "AppleOS"]
		},
		{
			"name": "uwp",
			"targetType": "staticLibrary",
			"subConfigurations": {
				"audio": "dxonly",
				"renderer": "uwp"
			},
			"dflags-ldc": ["-link-defaultlib-shared=true"],
			"versions-windows": [
				"Standalone",
				"DirectX",
				"XAudio2",
				"dll",
				"UWP"
			]
		},
		{
			"name": "customrt",
			"dependencies": {
				"d_std": {"path": "modules/d_std", "version": "*"},
				"runtime": {"path": "dependencies/runtime", "version": "*"}
			},
			"lflags-windows": [
				"/SUBSYSTEM:CONSOLE"
			],
			"subConfigurations": {
				"runtime": "psvita",
				"d_std": "psvita",
				"assets": "gamut",
				"audio": "null"
			},
			"versions": [
				"Standalone",
				"GameBuildTest",
				"Desktop",
				"CarelessAlocation"
			],
			"targetType": "executable"
		}
	],
	"toolchainRequirements": {
		"frontend": ">=2.099",
		"dub": ">=1.31.0"
	}
}
