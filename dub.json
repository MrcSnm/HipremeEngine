{
	"authors": [
		"Hipreme"
	],
	"buildOptions": [
		"debugMode",
		"debugInfo",
		"debugInfoC",
		"warnings"
	],
	"dflags-dmd": [
		"-checkaction=halt"
	],
	"configurations": [
		{
			"name": "desktop",
			"targetPath": "bin/desktop",
			"targetType": "executable",
			"versions": [
				"Desktop",
				"Standalone",
				"Test",
				"NO_GLES",
				"NO_SLES"
			],
			"buildOptions": [
				"debugMode",
				"debugInfo",
				"debugInfoC"
			],
			"versions-windows": [
				"FSWUsesWin32"
			]
		},
		{
			"name": "script",
			"targetPath": "bin/desktop",
			"targetType": "executable",
			"dependencies": {
				"fswatch": "~>0.6.0"
			},
			"versions": [
				"Desktop",
				"LoadScript",
				"Standalone",
				"NO_GLES",
				"NO_SLES"
			],
			"buildOptions": [
				"debugMode",
				"debugInfo",
				"debugInfoC"
			],
			"versions-windows": [
				"FSWUsesWin32"
			]
		},
		{
			"name" : "time_trace",
			"targetPath": "bin/desktop",
			"dflags-ldc": [
				"--ftime-trace"
			],
			"targetType": "executable",
			"versions": [
				"Desktop",
				"Standalone",
				"Test",
				"TimeTrace"
			],
			"versions-windows": [
				"FSWUsesWin32"
			]
		},
		{
			"name": "game",
			"sourcePaths": [
				"build/release_game/source"
			],
			"targetPath": "bin/desktop",
			"targetType": "executable",
			"versions": [
				"Standalone",
				"Desktop"
			]
		},
		{
			"buildOptions": [
				"releaseMode",
				"optimize"
			],
			"name": "game_optimize",
			"sourcePaths": [
				"build/release_game/source"
			],
			"targetPath": "bin/desktop",
			"targetType": "executable",
			"versions": [
				"Standalone",
				"Desktop"
			]
		},
		{
			"name": "uwp",
			"postBuildCommands": [
				"cd .\\build && rdmd insertresourceuwp.d .\\uwp\\HipremeEngine\\HipremeEngine ..\\assets"
			],
			"subConfigurations": {
				"audio": "uwp"
			},
			"targetPath": "bin/uwp/",
			"targetType": "dynamicLibrary",
			"versions": [
				"dll",
				"UWP"
			]
		},
		{
			"name": "release_uwp",
			"postBuildCommands": [
				"cd .\\build && rdmd insertresourceuwp.d .\\uwp\\HipremeEngine\\HipremeEngine ..\\assets"
			],
			"sourcePaths": [
				"build/release_game/source"
			],
			"subConfigurations": {
				"audio": "uwp"
			},
			"targetPath": "bin/uwp",
			"targetType": "dynamicLibrary",
			"versions": [
				"Standalone",
				"dll",
				"UWP"
			]
		},
		{
			"libs": [
				"log",
				"android",
				"OpenSLES",
				"EGL",
				"GLESv3"
			],
			"dependencies": {
				"jni": {"path": "./modules/jni", "version": "*"},
				"sles": {"path": "./dependencies/sles", "version": "*"},
				"gles" : {"path": "./dependencies/gles", "version": "*"}
			},
			"subConfigurations": {
				"audio": "android",
				"console": "android",
				"renderer": "android"
			},
			"name": "android",
			"postBuildCommands": [
				"copy /B .\\bin\\android\\libhipreme_engine.so .\\build\\android\\project\\app\\src\\main\\jniLibs\\arm64-v8a\\libhipreme_engine.so",
				"cd .\\build && rdmd copyresources.d ..\\assets .\\android\\project\\app\\src\\main\\assets",
				"cd .\\build\\android\\project\\ && .\\gradlew.bat :app:assembleDebug && adb install -r .\\app\\build\\outputs\\apk\\debug\\app-debug.apk",
				"adb shell monkey -p com.hipremeengine.app 1",
				"adb logcat -b all -v color com.hipremengine.app:D | findstr HipremeEngine"
			],
			"targetPath": "bin/android/",
			"targetType": "dynamicLibrary",
			"versions": [
				"dll",
				"GLES30"
			]
		}
	],
	"copyright": "Copyright Â© 2018 - 2021, Hipreme",
	"dependencies": {
		"arsd-official:dom": "~>10.8.4",
