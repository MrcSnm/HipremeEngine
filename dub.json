{
	"authors": [
		"Hipreme"
	],
	"buildOptions": [
		"debugMode",
		"debugInfo",
		"debugInfoC"
	],
	"configurations": [
		{
			"name": "desktop",
			"targetPath": "bin/desktop",
			"targetType": "executable"
		},
		{
			"name": "uwp",
			"targetPath": "bin/uwp/",
			"targetType": "dynamicLibrary",
			"versions": [
				"dll",
				"UWP"
			]
		},
		{
			"name": "android",
			"dflags": [
				"-g"
			],
			"libs": [
				"log",
				"android",
				"OpenSLES",
				"EGL",
				"GLESv3"
			],
			"postBuildCommands": [
				"copy /B .\\bin\\android\\libhipreme_engine.so .\\build\\android\\project\\app\\src\\main\\jniLibs\\arm64-v8a\\libhipreme_engine.so",
				"cd .\\build && rdmd copyresources.d ..\\assets .\\android\\project\\app\\src\\main\\assets",
				"cd .\\build\\android\\project\\ && .\\gradlew.bat :app:assembleDebug && adb install -r .\\app\\build\\outputs\\apk\\debug\\app-debug.apk",
				"adb shell monkey -p com.hipremeengine.app 1",
				"adb logcat -b all -v color com.hipremengine.app:D | findstr HipremeEngine"
			],
			"targetPath": "bin/android/",
			"targetType": "dynamicLibrary",
			"versions": [
				"dll",
				"GLES30"
			]
		}
	],
	"copyright": "Copyright Â© 2018 - 2021, Hipreme",
	"dependencies": {
		"arsd-official:dom": "~>10.2.0",
		"bindbc-cimgui": "~>1.0.1",
		"bindbc-openal": "~>0.5.0",
		"bindbc-opengl": "~>0.13.0",
		"bindbc-sdl": "~>0.19.0",
		"directx-d": {
			"path": "dependencies/directx-d",
			"version": ">=0.0.0"
		},
		"gles": {
			"path": "dependencies/gles",
			"version": ">=0.0.0"
		}
	},
	"description": "Open-Source D Game Engine",
	"dflags": [
		"-J=."
	],

	"importPaths": [
		"source",
		"dependencies/directx-d/src",
		"dependencies/gles/source",
		"dependencies/sles/source"
	],
	"importPaths-ldc" :
	[
		"C:/ldc2/import"
	],
	"libs-windows": [
		"ole32",
		"user32",
		"C:\\Program Files (x86)\\Microsoft DirectX SDK (June 2010)\\Lib\\x64\\d3dcompiler",
		"d3d11",
		"dxgi",
		"dependencies/directx-d/directx-d"
	],
	"license": "proprietary",
	"name": "hipreme_engine",
	"sourcePaths": [
		"source"
	],
	"versions": [
		"HIPREME_DEBUG",
		"SDL_208",
		"BindSDL_Mixer",
		"BindSDL_TTF",
		"BindSDL_Image",
		"GL_45",
		"GL_ARB",
		"AL_EFX"
	]
}