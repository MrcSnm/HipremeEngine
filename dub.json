{
	"name": "hipreme_engine",
	"authors": [
		"Hipreme"
	],
	"copyright": "Copyright Â© 2018 - 2021, Hipreme",
	"dependencies": {
		"arsd-official:dom": "~>10.2.0",
		"bindbc-cimgui": "~>1.0.1",
		"bindbc-openal": "~>0.5.0",
		"bindbc-opengl": "~>0.13.0",
		"bindbc-sdl": "~>0.19.0"
	},
	"description": "Open-Source D Game Engine",
	"dflags": [
		"-version=HIPREME_DEBUG",
		"-J=."
	],
	"importPaths": [
		"source",
		"dependencies/directx-d/src"
	],
	"libs-windows": [
		"ole32",
		"user32",
		"C:\\Program Files (x86)\\Microsoft DirectX SDK (June 2010)\\Lib\\x64\\d3dcompiler",
		"d3d11",
		"dxgi",
		"dependencies/directx-d/directx-d"
	],
	"license": "proprietary",
	"sourcePaths": [
		"source"
	],
	
	"buildOptions": [
		"debugMode",
		"debugInfo",
		"debugInfoC"
	],
	"versions": 
	[
		"SDL_208",
		"BindSDL_Mixer",
		"BindSDL_TTF",
		"BindSDL_Image",
		"GL_45",
		"GL_ARB",
		"AL_EFX"
	],
	"configurations": [
		{
			"name": "desktop",
			"targetPath": "bin/desktop",
			"targetType": "executable",
		},
		{
			"name": "uwp",
			"targetPath": "bin/uwp/",
			"targetType": "dynamicLibrary",
			"versions": [
				"dll",
				"UWP",
			]
		},
		{
			"libs": [
				"log"
			],
			"name": "android",
			"toolchainRequirements": 
			{
				"dmd": "no",
				"gdc": "no",
				"ldc": ">=1.23"
			},
			"targetPath": "bin/android/",
			"targetType": "dynamicLibrary",
			"versions": [
				"dll"
			]
		}
	]
}