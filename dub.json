{
	"name": "hipreme_engine",
	"description": "Open-Source D Game Engine",
	"authors": [
		"Hipreme"
	],
	"copyright": "Copyright Â© 2018 - 2022, Hipreme",
	"license": "CC BY-4.0",
	"buildOptions": [
		"debugMode",
		"debugInfo",
		"debugInfoC",
		"warnings"
	],
	"dflags": [
		"-preview=shortenedMethods",
		"-mixin=mixed.d",
		"-J."
	],
	"dflags-dmd": ["-op"],
	"dflags-ldc": ["--disable-verify", "--oq"],
	"versions": [
		"HIPREME_DEBUG",
		"HipCheckUnknownKeycode",
		"HipMathAPI",
		"HipDStdFile",
		"HipScriptingAPI",
		"GL_45",
		"GL_ARB",
		"AL_EFX"
	],
	"subConfigurations": {
		"hipengine_api": "hipengine"
	},
	"sourcePaths": [
		"source"
	],
	"dependencies": {
		"assets": {"path": "./modules/assets", "version": "*"},
		"audio": {"path": "./modules/audio", "version": "*"},
		"bind": {"path": "./modules/bind", "version": "*"},
		"config": {"path": "./modules/config", "version": "*"},
		"console": {"path": "./modules/console", "version": "*"},
		"error": {"path": "./modules/error", "version": "*"},
		"filesystem": {"path": "./modules/filesystem", "version": "*"},
		"timer": {"path": "./modules/timer", "version": "*"},
		"tween": {"path": "./modules/tween", "version": "*"},
		"hipengine_api": {"path": "./api", "version": "*"},
		"math": {"path": "./modules/math", "version": "*"},
		"renderer": {"path": "./modules/renderer", "version": "*"},
		"util": {"path": "./modules/util", "version": "*"}
	},
	"configurations": [
		{
			"name": "desktop",
			"targetPath": "bin/desktop",
			"targetType": "executable",
			"lflags-windows-ldc": ["-Lmodules/renderer/lib/win64"],
			"versions": [
				"OpenGL",
				"OpenAL",
				"Desktop",
				"Standalone",
				"Test"
			],
			"versions-windows": [
				"Direct3D_11",
				"DirectX",
				"XAudio2"
			]
		},
		{
			"name": "4mb",
			"targetPath": "bin/desktop",
			"targetType": "executable",
			"subConfigurations": {
				"renderer": "dxonly",
				"audio": "dxonly",
				"assets": "gamut"
			},
			"dependencies": {
				"d_std": {"path": "modules/d_std", "version": "*"},
				"runtime": {"path": "dependencies/runtime", "version": "*"}
			},
			"lflags-windows": [
				"/SUBSYSTEM:CONSOLE"
			],
			"dflags": [
				"-Oz"
			],
			"versions-windows": [
				"Desktop",
				"Standalone",
				"Test",
				"Direct3D_11",
				"DirectX",
				"XAudio2"
			]
		},
		{
			"name": "appleos",
			"targetPath": "bin/desktop",
			"targetType": "executable",
			"stringImportPaths": [
				"build/release_game/"
			],
			"sourcePaths": [
				"build/release_game/source"
			],
			"versions": [
				"OpenAL",
				"Standalone",
				"AppleOS"
			],
			"subConfigurations": {
				"renderer": "appleos" 
			}
		},
		{
			"name": "appleos-main",
			"targetPath": "build/appleos/HipremeEngine D/libs",
			"targetType": "staticLibrary",
			"stringImportPaths": [
				"build/release_game/"
			],
			"sourcePaths": [
				"build/release_game/source"
			],
			"versions": [
				"OpenAL",
				"Standalone",
				"AppleOS"
			],
			"subConfigurations": {
				"renderer": "appleos" 
			}
		},
		{
			"name": "nodx",
			"targetPath": "bin/desktop",
			"targetType": "executable",
			"versions": [
				"OpenGL",
				"OpenAL",
				"Desktop",
				"Standalone",
				"Test"
			],
			"subConfigurations": {
				"audio": "nodx",
				"renderer": "nodx"
			}
		},
		{
			"name": "script",
			"targetPath": "bin/desktop",
			"targetType": "executable",
			"lflags-windows-ldc": ["-Lmodules/renderer/lib/win64"],
			"dependencies": {
				"fswatch": "~>0.6.1"
			},
			"versions": [
				"OpenGL",
				"OpenAL",
				"Desktop",
				"Load_DScript",
				"Standalone"
			],
			"dflags-ldc": [
				"--ftime-trace",
				"--ftime-trace-file=./my-trace.json"
			],
			"lflags-linux-ldc": ["--export-dynamic"],
			"versions-windows": [
				"Direct3D_11",
				"DirectX",
				"XAudio2"
			]
		},
		{
			"name": "game",
			"stringImportPaths": [
				"build/release_game/"
			],
			"sourcePaths": [
				"build/release_game/source"
			],
			"targetPath": "bin/desktop",
			"targetType": "executable",
			"versions": [
				"OpenGL",
				"GameBuildTest",
				"OpenAL",
				"Standalone",
				"Desktop"
			],
			"versions-windows": [
				"Direct3D_11",
				"XAudio2",
				"DirectX"
			]
		},
		{
			"name": "customrt",
			"dependencies": {
				"d_std": {"path": "modules/d_std", "version": "*"},
				"runtime": {"path": "dependencies/runtime", "version": "*"}
			},
			"sourcePaths": [
				"build/release_game/source"
			],
			"stringImportPaths": [
				"build/release_game/"
			],
			"lflags-windows": [
				"/SUBSYSTEM:CONSOLE"
			],
			"subConfigurations": {
				"runtime": "psvita",
				"d_std": "psvita",
				"assets": "gamut",
				"audio": "null"
			},
			"versions": [
				"Standalone",
				"GameBuildTest",
				"Desktop",
				"OpenGL",
				"OpenAL",
				"CarelessAlocation"
			],
			"targetType": "executable"
		}
	],
	"toolchainRequirements": {
		"frontend": ">=2.099",
		"dub": ">=1.31.0"
	}
}
