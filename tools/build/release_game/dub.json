				"/DEBUG"
			]
		},
		{
			"name": "ldc",
			"targetType": "dynamicLibrary",
			"versions": ["Script"],
			"dflags": [
				"-link-defaultlib-shared=false"
			],
			"lflags-windows": [
				"/WX"
			]
		},
		{
			"name": "run",
			"targetType": "dynamicLibrary",
			"versions": ["Script"],
			"lflags-windows": [
				"/WX"
			],
			"postBuildCommands": ["cd G:\\HipremeEngine && dub -c script -- G:\\HipremeEngine\\projects\\match3"]
		}
