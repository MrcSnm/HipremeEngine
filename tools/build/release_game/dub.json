	],
	"preBuildCommands": [
		"rdmd $HIPREME_ENGINE/tools/build/getmodules.d source/ scriptmodules.txt"
	],
	
	"configurations": 
	[
		{
			"name" : "script",
			"targetType": "dynamicLibrary",
